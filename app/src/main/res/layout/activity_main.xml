<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_main__header"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        />

    <ImageButton
        android:id="@+id/activity_main__chat"
        android:src="@drawable/ic_baseline_chat_bubble_24"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#303030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_main__people"
        app:layout_constraintTop_toBottomOf="@id/activity_main__header"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageButton
        android:id="@+id/activity_main__people"
        android:src="@drawable/ic_baseline_people_outline_24"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#303030"
        app:layout_constraintStart_toEndOf="@id/activity_main__chat"
        app:layout_constraintEnd_toStartOf="@id/activity_main__table"
        app:layout_constraintTop_toBottomOf="@id/activity_main__header"/>

    <ImageButton
        android:id="@+id/activity_main__table"
        android:src="@drawable/ic_baseline_table_chart_24"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#303030"
        app:layout_constraintStart_toEndOf="@id/activity_main__people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__header"/>


    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__people"
        app:layout_constraintBottom_toTopOf="@id/activity_main__microphone"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/activity_main__person1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_weight="50">
            <androidx.cardview.widget.CardView
                android:id="@+id/activity_main__person1_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/blue"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/vash"/>
                    <TextView
                        android:id="@+id/activity_main__user1_mic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_centerInParent="true"
                        android:text="@string/user1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:drawableRight="@drawable/ic_baseline_mic_off_16"
                        android:drawablePadding="5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/activity_main__person2"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="50">
            <androidx.cardview.widget.CardView
                android:id="@+id/activity_main__person2_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/blue"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/nicholas"/>
                    <TextView
                        android:id="@+id/activity_main__person2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_centerInParent="true"
                        android:text="@string/user2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:drawableRight="@drawable/ic_baseline_mic_off_16"
                        android:drawablePadding="5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_main__footer"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="32dp"
        />


    <ImageButton
        android:id="@+id/activity_main__videocam"
        android:src="@drawable/ic_baseline_videocam_off_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#303030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_main__microphone"
        app:layout_constraintBottom_toTopOf="@id/activity_main__footer"
        android:onClick="videoCheck"/>

    <ImageButton
        android:id="@+id/activity_main__microphone"
        android:src="@drawable/ic_baseline_mic_off_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#303030"
        app:layout_constraintStart_toEndOf="@id/activity_main__videocam"
        app:layout_constraintEnd_toStartOf="@id/activity_main__hand"
        app:layout_constraintBottom_toTopOf="@id/activity_main__footer"/>

    <ImageButton
        android:id="@+id/activity_main__hand"
        android:src="@drawable/ic_baseline_waving_hand_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#303030"
        app:layout_constraintStart_toEndOf="@id/activity_main__microphone"
        app:layout_constraintEnd_toStartOf="@id/activity_main__exit"
        app:layout_constraintBottom_toTopOf="@id/activity_main__footer"/>

    <ImageButton
        android:id="@+id/activity_main__exit"
        android:src="@drawable/ic_baseline_call_end_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#303030"
        app:layout_constraintStart_toEndOf="@id/activity_main__hand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_main__footer"/>
</androidx.constraintlayout.widget.ConstraintLayout>